<div class="m_loginForm">
  <div class="wrapper">
    <div class="container">
      <h2><%= t('devise.passwords.title') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">          
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.passwords.reset_email') %>
        </div>

        <div class="actions">
          <%= f.submit t('devise.passwords.send_reset_password'), class: 'p_button isBlueBg' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>